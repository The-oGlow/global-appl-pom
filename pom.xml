    <profiles>
        <!--
            Description     :   Generate the java api documentation
            See             :   https://maven.apache.org/plugins/maven-javadoc-plugin/
         -->
        <profile>
            <id>build-javadoc</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-javadoc-plugin</artifactId>
                        <configuration>
                            <failOnError>false</failOnError>
                            <failOnWarnings>false</failOnWarnings>
                            <additionalOptions>-Xdoclint:none</additionalOptions>
                        </configuration>
                        <executions>
                            <execution>
                                <id>attach-javadocs</id>
                                <phase>prepare-package</phase>
                                <goals>
                                    <goal>jar</goal>
                                    <goal>test-jar</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <!--
            Description     :   Signs the artifact
            See             :   https://maven.apache.org/plugins/maven-jarsigner-plugin/
            Syntax 1        :   mvn -Psign-jar clean [verify|install]
            Syntax 2        :   mvn -Psign-jar,artifact-release clean deploy
            Example 1       :   mvn -Psign-jar -DskipTests -DskipITs clean install
         -->
        <profile>
            <id>sign-jar</id>
            <properties>
                <!--suppress UnresolvedMavenProperty -->
                <sign.keystore>${env.SIGN_KEYSTORE}</sign.keystore>
                <!--suppress UnresolvedMavenProperty -->
                <sign.storepass>${env.SIGN_STOREPASS}</sign.storepass>
                <!--suppress UnresolvedMavenProperty -->
                <sign.alias>${env.SIGN_ALIAS}</sign.alias>
            </properties>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-enforcer-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>09-generate-jar-sign-prepare</id>
                                <phase>generate-sources</phase>
                                <goals>
                                    <goal>enforce</goal>
                                </goals>
                                <configuration>
                                    <failFast>true</failFast>
                                    <rules>
                                        <requireProperty>
                                            <property>clean.cleaned</property>
                                            <message>Add life-cycle 'clean' when perfoming sign the jar!</message>
                                        </requireProperty>
                                        <requireFilesExist>
                                            <message>This files must exists:
                                                sign.keystore : ${sign.keystore}
                                            </message>
                                            <files>
                                                <file>${sign.keystore}</file>
                                            </files>
                                        </requireFilesExist>
                                        <requireProperty>
                                            <property>sign.storepass</property>
                                            <message>This variables must be set:
                                                sign.storepass : ${sign.storepass}
                                            </message>
                                        </requireProperty>
                                        <requireProperty>
                                            <property>sign.alias</property>
                                            <message>This variables must be set:
                                                sign.alias : ${sign.alias}
                                            </message>
                                        </requireProperty>
                                    </rules>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-jarsigner-plugin</artifactId>
                        <configuration>
                            <keystore>${sign.keystore}</keystore>
                            <storepass>${sign.storepass}</storepass>
                            <alias>${sign.alias}</alias>
                        </configuration>
                        <executions>
                            <execution>
                                <id>80-generate-jar-sign</id>
                                <phase>verify</phase>
                                <goals>
                                    <goal>sign</goal>
                                </goals>
                                <configuration>
                                    <verbose>false</verbose>
                                </configuration>
                            </execution>
                            <execution>
                                <id>85-validate-jar-sign</id>
                                <phase>verify</phase>
                                <goals>
                                    <goal>verify</goal>
                                </goals>
                                <configuration>
                                    <verbose>false</verbose>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <!--
            Description     :   Generate a separate jar for test classes
         -->
        <profile>
            <id>build-testjar</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-jar-plugin</artifactId>
                        <executions>
                            <execution>
                                <phase>package</phase>
                                <goals>
                                    <goal>test-jar</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-source-plugin</artifactId>
                        <executions>
                            <execution>
                                <phase>package</phase>
                                <goals>
                                    <goal>test-jar</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <!--
            Description     :   Adds a license text to every java class
            See             :   https://www.mojohaus.org/license-maven-plugin/
         -->
        <profile>
            <id>license-header</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.codehaus.mojo</groupId>
                        <artifactId>license-maven-plugin</artifactId>
                        <configuration>
                            <licenseName>apache_v2</licenseName>
                            <roots>
                                <root>src/main/java</root>
                                <root>src/test/java</root>
                            </roots>
                            <includes>
                                <include>**/*.java</include>
                            </includes>
                            <canUpdateCopyright>true</canUpdateCopyright>
                            <canUpdateLicense>true</canUpdateLicense>
                            <canUpdateDescription>true</canUpdateDescription>
                        </configuration>
                        <executions>
                            <execution>
                                <id>first</id>
                                <phase>process-sources</phase>
                                <goals>
                                    <goal>update-file-header</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
